<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>sample_project</groupId>
  <artifactId>sample_project</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  
   <properties>
     <java.version>21</java.version>
     <maven.test.skip>false</maven.test.skip>
  </properties>	
 	<build>
        <plugins>
           	<plugin>
    			<groupId>org.apache.maven.plugins</groupId>
    			<artifactId>maven-surefire-plugin</artifactId>
    			<version>3.5.1</version>
    			<executions>
        		<execution>
        			<goals>
                		<goal>test</goal>
            		</goals>
    		 		<configuration>
        				<testFailureIgnore>false</testFailureIgnore>
        				<useSystemClassLoader>false</useSystemClassLoader>
    					<reportsDirectory>target/test-output</reportsDirectory>
        				<suiteXmlFiles>
                    		<suiteXmlFile>src/main/resources/testng.xml</suiteXmlFile> 
               			 </suiteXmlFiles>
    		 		</configuration>
    		 	</execution>
   				</executions>
		  		</plugin>
		  	
		  	
    <plugin>
    <groupId>org.jacoco</groupId>
    <artifactId>jacoco-maven-plugin</artifactId>
    <version>0.8.12</version>
    <executions>
        <!-- Prepare JaCoCo agent -->
        <execution>
            <id>prepare-agent</id>
            <goals>
                <goal>prepare-agent</goal>
            </goals>
        </execution>

        <!-- Generate report after tests are run -->
        <execution>
            <id>report</id>
            <goals>
                <goal>report</goal>
            </goals>
            <phase>test</phase>

            <configuration>
                <outputDirectory>${project.build.directory}/jacoco-report</outputDirectory>
                <dataFile>${project.build.directory}/jacoco.exec</dataFile>
                <!-- Include all class files by default -->
                <includes>
                    <include>**/*.class</include>
                </includes>

                <!-- Exclude specific utility classes -->
                <excludes>
                    <exclude>**/Sampleclass_DB_utility.class</exclude>
                    <exclude>**/Sampleclass_Excel_utility.class</exclude>
                    <exclude>**/Sampleclass_Screenshot_utility.class</exclude>
                </excludes>
            </configuration>
        </execution>
    </executions>
</plugin>
       
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

           
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version> 
                <configuration>
                    <source>21</source>
                    <target>21</target>
                    <testSource>21</testSource>
          			<testTarget>21</testTarget>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
  
